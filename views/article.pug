extends base.pug

append content
    div(class="col-xs-12 col-md-10 col-md-offset-1" style={ height: '70%', 'padding-top': '40px', 'margin-top': '60px'})
        
            if !articles
                .panel.panel-default
                h4 作者很懒，什么文章都没有发布

            else
                - articles.forEach(item => {
                    .panel.panel-default
                        .panel-heading
                            h3.panel-title
                                =`${item.title}`
                                small.pull-right
                                    =`${item.createAt}`
                        .panel-body
                            =`${item.content}`
                        .panel-body
                            button(class="btn btn-primary pull-right" onclick=`window.location.href='/article/${item._id}'`) 阅读全文
                - })
