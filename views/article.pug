extends base.pug

append content
    div(class="col-xs-12 col-md-10 col-md-offset-1" style={ height: '70%', 'padding-top': '40px', 'margin-top': '60px'})
            if !articles.length
                .panel.panel-default
                h4(style={'text-align': 'center'}) 作者什么都没有发布，也不想搞个大新闻

            else
                - articles.forEach(item => {
                    .panel.panel-default
                        .panel-heading
                            h3(class="panel-title" style={ 'font-size': '300%'})
                                =`${item.title}`
                                small(class="pull-right" style={ 'font-size': '35%' })
                                    =`${item.createAt}`
                        div(class="panel-body" style={ 'font-size': '200%' })
                            !=`${item.content}`
                        .panel-body
                            button(class="btn btn-primary pull-right" onclick=`window.location.href='/article/${item._id}'`) 阅读全文
                - })
